@model EmployeeManagement.Models.Employee

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insert Employee</title>
</head>
<body>
    <h2>Insert Employee</h2>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div>@ViewBag.Message</div>
    }
    <form method="post" asp-action="Insert" asp-controller="EmployeeController"> 
        <div>
            <label asp-for="Company_Name"></label>
            <input asp-for="Company_Name" />
            <span asp-validation-for="Company_Name"></span>
        </div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Mobile"></label>
            <input asp-for="Mobile" />
            <span asp-validation-for="Mobile"></span>
        </div>
        <div>
            <label asp-for="Address"></label>
            <input asp-for="Address" />
            <span asp-validation-for="Address"></span>
        </div>
        <div>
            <label asp-for="City"></label>
            <input asp-for="City" />
            <span asp-validation-for="City"></span>
        </div>
        <div>
            <label asp-for="PinCode"></label>
            <input asp-for="PinCode" />
            <span asp-validation-for="PinCode"></span>
        </div>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
